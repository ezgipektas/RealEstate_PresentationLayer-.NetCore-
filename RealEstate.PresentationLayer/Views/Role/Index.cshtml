@model List<RealEstate.EntityLayer.Concrete.AppRole>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rol Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Rol Adı</th>
    </tr>
    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td><a href="/Role/DeleteRole/@item.Id" class="btn btn-danger">Sil</a></td>
            <td><a href="/Role/UpdateRoles/@item.Id" class="btn btn-success">Güncelle</a></td>
        </tr>
    }
</table>
<br />
<a href="/Role/AddRole/" class="btn btn-primary">Yeni Rol Ekle</a>
@model List<AppUser>

@{
    ViewData["Title"] = "UserList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Kullanıcı Listesi</h1>

<table class="table table-bordered">
    <tr>
        <th>Kullanıcı Adı</th>
        <th>Rol Ata</th>
        
    </tr>
    @foreach (var item in Model)
    {
        <tr>
          
            <td>@item.UserName</td>
            <td><a href="/User/AssignRole/@item.Id" class="btn btn-dark">Rol Ataması Yap</a></td>
        </tr>
    }
</table>
